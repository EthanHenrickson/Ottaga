{
	"name": "Ottaga",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e && npm run test:unit -- --run",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"pre-commit": "npm run lint:fix && npm run format && npm run test"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@faker-js/faker": "^9.9.0",
		"@playwright/test": "^1.54.2",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-node": "^5.2.14",
		"@sveltejs/kit": "^2.28.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/pg": "^8.15.5",
		"eslint": "^9.33.0",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"jiti": "^2.5.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.38.1",
		"svelte-check": "^4.3.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@oslojs/crypto": "^1.0.1",
		"argon2": "^0.44.0",
		"kysely": "^0.28.5",
		"marked": "^16.1.2",
		"openai": "^5.12.2",
		"pg": "^8.16.3",
		"posthog-js": "^1.259.0",
		"posthog-node": "^5.6.0",
		"uuid": "^11.1.0"
	}
}
